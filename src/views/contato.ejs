<%- include('includes/head')%>
<%- include('includes/nav')%>    

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seus contatos abaixo:</p>

            <%- include('includes/messages') %>

            <% if (contato._id) { %>
            <form action="/contato/edit/<%=contato._id%>" class="form-contato" method="POST">
            <% } else { %>
            <form action="/contato/register" class="form-contato" method="POST">
            <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label>Nome:</label>
                  <input type="text" value="<%= contato.nome %>"  class="form-control" name="nome">
                </div>
                <div class="campoNome"></div>

                <div class="form-group">
                    <label>Sobrenome:</label>
                    <input type="text" value="<%= contato.sobrenome %>"class="form-control" name="sobrenome">
                </div>
                <div class="campoSobrenome"></div>

                  <div class="form-group">
                    <label>Email:</label>
                    <input type="email" value="<%= contato.email %>"class="form-control" name="email">
                  </div>
                  <div class="campoEmail"></div>

                  <div class="form-group">
                    <label>Telefone:</label>
                    <input type="number" value="<%= contato.telefone %>" class="form-control" name="telefone">
                  </div>
                  <div class="campoTelefone"></div>
  
                  <br>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>

            <div class="responsive-table">
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer')%>  